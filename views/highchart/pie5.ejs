<style>
.highcharts-title * {
  font-family: "Dotum";
}

.highcharts-drilldown-data-label * {
  fill: #aaa;
}

</style>

<script src="highchart/highstock.js"></script>
<script src="highchart/drilldown.js"></script>

<div id="pie5" style="min-width: 700px; max-width: 700px; height: 400px; margin: 0 auto"></div>

<!-- Data from www.netmarketshare.com. Select Browsers => Desktop share by version. Download as tsv. -->

<script>

document.addEventListener("DOMContentLoaded", function(event) {
    $('#pie5').highcharts({
        chart: {
            type: 'pie'
        },
        title: {
            text: '공격 시도 분석 결과'
        },
        subtitle: {
            text: ''
        },
        plotOptions: {
            series: {
                dataLabels: {
                    enabled: false,
                    format: '{point.name}'
                }
            },
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                events: {
                  click: function () {
    var url = '#table';
    window.open(url,'_blank');
                   }
                },
                dataLabels: {
                    enabled: false
                },
                showInLegend: true
            }
        },

        tooltip: {
            headerFormat: '<span style="font-size:11px">{series.name}</span><br>',
            pointFormat: '<span style="color:{point.color}">{point.name}</span>: <b>{point.y}</b>번의 공격 시도<br/>'
        },
        series: [{
            name: '공격명',
            colorByPoint: true,
            data: [
              <% for (i in ip_data){ if(ip_data[i].attackname != null){%>
              {
                name: '<%= ip_data[i].attackname%>',
                y: <%= ip_data[i].count%>,
                drilldown: '<%= ip_data[i].attackname%>'
              },
              <%}}%>
        ]}],
        drilldown: {
            series: [
              {
              },
            ]
        }
    });
});

</script>
<script src="highchart/dark-unica.js"></script>
