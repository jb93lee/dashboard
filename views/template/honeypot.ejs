<%layout('../layout')%>
<style>

#page-wrapper {
  background-color: #222;
}
a {
  color: #e1e1e1;
}

.morris-tmp {
  width: 500px;
  height: 418px
}
</style>
<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"><font color=white>IPS & KIPPO Report</font></h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    		<div class="row">

          <div class="col-lg-5">
            <div class="panel panel-default">
              <div class="panel-heading">
                 ATTACK NAME TOP 10
              </div>
              <div class="panel-body">
      					<!--div class="d-chart"></div-->
                <div class="morris-tmp">
                  <div id="morris-donut-chart"></div>
                  <script>
                  document.addEventListener("DOMContentLoaded", function(event) {
                    Morris.Donut({
                      element: 'morris-donut-chart',
                      data: [
                      <% for (var i in donut_data){%>
//                        {label: "<%= donut_data[i].attack_name.replace(/ /gi,'\\n')%>", value: <%=donut_data[i].number%>},
                        {label: "<%= donut_data[i].attack_name%>", value: <%=donut_data[i].number%>},
                      <%}%>
                      ]
                    });
                  });
                  </script>
                </div>
    			    </div>
            </div>
          </div>

          <div class="col-lg-7">
            <div class="panel panel-default">
              <div class="panel-heading">
                 ATTACKER MAP TOP 10
              </div>
              <div class="panel-body">
                <!--div id="map" class="display"></div-->
                <div class="tmp">
                  <div class="map"></div>
                  <% include ../d3/map3 %>
                </div>
    			    </div>
            </div>
          </div>

        </div>
    		<div class="row">

          <div class="col-lg-4">
            <div class="panel panel-default">
              <div class="panel-heading">
                 Username TOP 10
              </div>
              <div class="panel-body">
                <div class="table-responsive">
                  <table class="table table-bordered table-hover table-striped">
                    <thead>
                      <tr>
                        <th>Username</th>
                        <th>Attack Try</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% for(var i in table_data2){%>
                      <tr>
                        <td><%=table_data2[i].username%></td>
                        <td><%=table_data2[i].count%></td>
                      </tr>
                  <%}%>
                    </tbody>
                  </table>
                </div>
    			    </div>
            </div>
          </div>

          <div class="col-lg-4">
            <div class="panel panel-default">
              <div class="panel-heading">
                 Password TOP 10
              </div>
              <div class="panel-body">
                <div class="table-responsive">
                  <table class="table table-bordered table-hover table-striped">
                    <thead>
                      <tr>
                        <th>Password</th>
                        <th>Attack Try</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% for(var i in table_data3){%>
                      <tr>
                        <td><%=table_data3[i].password%></td>
                        <td><%=table_data3[i].count%></td>
                      </tr>
                  <%}%>
                    </tbody>
                  </table>
                </div>
    			    </div>
            </div>
          </div>

          <div class="col-lg-4">
            <div class="panel panel-default">
              <div class="panel-heading">
                 Username/Password TOP 10
              </div>
              <div class="panel-body">
                <div class="table-responsive">
                  <table class="table table-bordered table-hover table-striped">
                    <thead>
                      <tr>
                        <th>Username</th>
                        <th>Password</th>
                        <th>Attack Try</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% for(var i in table_data4){%>
                      <tr>
                        <td><%=table_data4[i].username%></td>
                        <td><%=table_data4[i].password%></td>
                        <td><%=table_data4[i].count%></td>
                      </tr>
                  <%}%>
                    </tbody>
                  </table>
                </div>
    			    </div>
            </div>
          </div>

    		</div>
        <!-- row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->
<% include ../d3/donut2 %>
<% include ../d3/map2 %>
<!-- script -->
<script src="/bower_components/jquery/dist/jquery.min.js"></script>
<script src="/bower_components/morrisjs/morris.min.js"></script>
<script type="text/javascript" src="../d3/d3.v3.js"></script>
<script type="text/javascript" src="../d3/d3.min.js"></script>
